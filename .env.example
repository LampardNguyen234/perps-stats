# Database configuration
DATABASE_URL=postgresql://perps_user:password@localhost:5432/perps_stats

# Logging level (trace, debug, info, warn, error)
RUST_LOG=perps_stats=info

# WebSocket orderbook streaming (default: false)
# Set to "true" to enable real-time orderbook streaming for supported exchanges
# (Aster, Binance, Extended, Pacifica, KuCoin)
# Requires DATABASE_URL to be set
ENABLE_ORDERBOOK_STREAMING=false